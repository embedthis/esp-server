{
    "name": "esp-server",
    "description": "ESP Server-Side Configuration",
    "version": "1.0.0-rc0",
    "keywords": [
        "esp",
    ],
    "precious": true,
    "dirs": {
        "client": "client",
        "paks": "client/paks"
    },
    "export": [
        "templates/**"
    ],
    "esp": {
        "logRoutes": false,
        "server": {
            "generate": {
                "appweb": "esp-server/appweb.conf",
            }
        },
        "mode": "debug",
        "modes": {
            "debug": {
                "combined": false,
                "compile": "symbols",
                "showErrors": true,
                "keepSource": true,
                "update": true,
            },
            "release": {
                "combined": true,
                "cache": 86400,
                "compile": "optimized",
                "compressed": true,
                "showErrors": false,
                "update": false,
                "keepSource": false,
            }
        }
    }
}
