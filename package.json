{
    "name": "esp-server",
    "description": "ESP Server-Side Configuration",
    "version": "5.0.0-rc0",
    "licenses": [
        {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        }, {
            "type": "Commercial",
            "url": "http://embedthis.com/licensing/"
        }
    ],
    "keywords": [
        "esp",
    ],
    "dirs": {
        "?client": "client",
        "?jslib": "client/lib",
        "?paks": "paks",
    },
    "esp": {
        "?logRoutes": false,
        "?mode": "debug",
        "modes": {
            "debug": {
                "?combine": false,
                "?compile": "symbols",
                "?showErrors": true,
                "?keepSource": true,
                "?update": true,
            },
            "release": {
                "?combine": true,
                "?cache": 86400,
                "?compile": "optimized",
                "?compressed": true,
                "?showErrors": false,
                "?update": false,
                "?keepSource": false,
            },
        },
        "server": {
            "generate": {
                "?appweb": "esp-server/generate/appweb.conf",
            },
            "?routes": "esp-server",
        },
    },
}
